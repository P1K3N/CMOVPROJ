<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ist174008.prof.cmov.cmov.HomeActivity"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Bike"
            android:id="@+id/buttonBookBike"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"/>
            <!--android:onClick="onBookBike"-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Info"
            android:id="@+id/button2"
            android:onClick="onUserInfo"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social"
            android:id="@+id/button3"
            android:onClick="onSocial"
            android:layout_below="@+id/buttonBookBike"
            android:layout_alignRight="@+id/buttonBookBike"
            android:layout_alignEnd="@+id/buttonBookBike" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trajectories"
            android:id="@+id/button4"
            android:onClick="onTrajectories"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>